		<profile>
			<id>production</id>
			<properties>
				<db.url>jdbc:postgresql://localhost:5432/postgres</db.url>
				<db.username>postgres</db.username>
				<db.password>root</db.password>
				<db.driver>org.postgresql.Driver</db.driver>
			</properties>
		</profile>
		<profile>
			<id>travis</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<db.url>jdbc:postgresql://localhost:5432/postgres</db.url>
